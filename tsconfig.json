{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonJS",
    "target": "es5",
    "lib": ["es6", "dom", "es2019"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "rollup.config.js",
    "**/*.spec.*"
  ]
}
